#version 460 core

#include <nbl/builtin/glsl/macros.glsl>

#ifndef _NBL_GLSL_WORKGROUP_SIZE_X_
#define _NBL_GLSL_WORKGROUP_SIZE_X_ 8
#endif

#ifndef _NBL_GLSL_WORKGROUP_SIZE_Y_
#define _NBL_GLSL_WORKGROUP_SIZE_Y_ 8
#endif

#ifndef _NBL_GLSL_WORKGROUP_SIZE_Z_
#define _NBL_GLSL_WORKGROUP_SIZE_Z_ 8
#endif

#ifndef _NBL_GLSL_BLIT_NORMALIZATION_BIN_COUNT_
#define _NBL_GLSL_BLIT_NORMALIZATION_BIN_COUNT_ 256
#endif

#ifndef _NBL_GLSL_BLIT_NORMALIZATION_DIM_COUNT_
#error _NBL_GLSL_BLIT_NORMALIZATION_DIM_COUNT_ must be defined
#endif

#ifndef _NBL_GLSL_BLIT_NORMALIZATION_INOUT_IMAGE_FORMAT_
#error _NBL_GLSL_BLIT_NORMALIZATION_INOUT_IMAGE_FORMAT_ must be defined
#endif

#if NBL_GLSL_EQUAL(_NBL_GLSL_BLIT_NORMALIZATION_DIM_COUNT_, 1)
	#define _NBL_GLSL_BLIT_NORMALIZATION_INOUT_IMAGE_TYPE_ image1D
#elif NBL_GLSL_EQUAL(_NBL_GLSL_BLIT_NORMALIZATION_DIM_COUNT_, 2)
	#define _NBL_GLSL_BLIT_NORMALIZATION_INOUT_IMAGE_TYPE_ image2D
#elif NBL_GLSL_EQUAL(_NBL_GLSL_BLIT_NORMALIZATION_DIM_COUNT_, 3)
	#define _NBL_GLSL_BLIT_NORMALIZATION_INOUT_IMAGE_TYPE_ image3D
#else
	#error _NBL_GLSL_BLIT_NORMALIZATION_DIM_COUNT_ not supported
#endif

#define _NBL_GLSL_WORKGROUP_SIZE_ (_NBL_GLSL_WORKGROUP_SIZE_X_ * _NBL_GLSL_WORKGROUP_SIZE_Y_ * _NBL_GLSL_WORKGROUP_SIZE_Z_)

layout (local_size_x = _NBL_GLSL_WORKGROUP_SIZE_X_, local_size_y = _NBL_GLSL_WORKGROUP_SIZE_Y_, local_size_z = _NBL_GLSL_WORKGROUP_SIZE_Z_) in;

#include <../normalization/parameters.glsl>
#include <../normalization/normalization.glsl>
#include <../normalization/descriptors.glsl>

layout (push_constant) uniform Block
{
	nbl_glsl_blit_normalization_parameters_t params;
} pc;

#ifndef _NBL_GLSL_BLIT_NORMALIZATION_GET_PARAMETERS_DEFINED_
nbl_glsl_blit_normalization_parameters_t nbl_glsl_blit_normalization_getParameters()
{
	return pc.params;
}
#define _NBL_GLSL_BLIT_NORMALIZATION_GET_PARAMETERS_DEFINED_
#endif

#ifndef _NBL_GLSL_BLIT_NORMALIZATION_GET_PADDED_DATA_DEFINED_

#ifndef _NBL_GLSL_BLIT_NORMALIZATION_INOUT_IMAGE_DESCRIPTOR_DEFINED_
#error _NBL_GLSL_BLIT_NORMALIZATION_INOUT_IMAGE_DESCRIPTOR_DEFINED_ must be defined
#endif

vec4 nbl_glsl_blit_normalization_getPaddedData(in ivec3 coord)
{
	const nbl_glsl_blit_normalization_parameters_t params = nbl_glsl_blit_normalization_getParameters();

#if NBL_GLSL_EQUAL(_NBL_GLSL_BLIT_NORMALIZATION_DIM_COUNT_, 1)
	#define COORD coord.x
	#define IMAGE_DIM params.outImageDim.x
#elif NBL_GLSL_EQUAL(_NBL_GLSL_BLIT_NORMALIZATION_DIM_COUNT_, 2)
	#define COORD coord.xy
	#define IMAGE_DIM params.outImageDim.xy
#elif NBL_GLSL_EQUAL(_NBL_GLSL_BLIT_NORMALIZATION_DIM_COUNT_, 3)
	#define COORD coord
	#define IMAGE_DIM params.outImageDim
#else
	#error _NBL_GLSL_BLIT_NORMALIZATION_DIM_COUNT_ not supported
#endif

	vec4 data = vec4(0.f);
	if (all(lessThan(COORD, IMAGE_DIM)))
		data = imageLoad(_NBL_GLSL_BLIT_NORMALIZATION_INOUT_IMAGE_DESCRIPTOR_DEFINED_, COORD);

#undef COORD
#undef IMAGE_DIM

	return data;
}
#define _NBL_GLSL_BLIT_NORMALIZATION_GET_PADDED_DATA_DEFINED_
#endif

#ifndef _NBL_GLSL_BLIT_NORMALIZATION_SET_DATA_DEFINED_
#define _NBL_GLSL_BLIT_NORMALIZATION_SET_DATA_DEFINED_

#ifndef _NBL_GLSL_BLIT_NORMALIZATION_INOUT_IMAGE_DESCRIPTOR_DEFINED_
#error _NBL_GLSL_BLIT_NORMALIZATION_INOUT_IMAGE_DESCRIPTOR_DEFINED_ must be defined
#endif

void nbl_glsl_blit_normalization_setData(in ivec3 coord, in vec4 data)
{
	const nbl_glsl_blit_normalization_parameters_t params = nbl_glsl_blit_normalization_getParameters();

#if NBL_GLSL_EQUAL(_NBL_GLSL_BLIT_NORMALIZATION_DIM_COUNT_, 1)
	#define COORD coord.x
	#define IMAGE_DIM params.outImageDim.x
#elif NBL_GLSL_EQUAL(_NBL_GLSL_BLIT_NORMALIZATION_DIM_COUNT_, 2)
	#define COORD coord.xy
	#define IMAGE_DIM params.outImageDim.xy
#elif NBL_GLSL_EQUAL(_NBL_GLSL_BLIT_NORMALIZATION_DIM_COUNT_, 3)
	#define COORD coord
	#define IMAGE_DIM params.outImageDim
#else
	#error _NBL_GLSL_BLIT_NORMALIZATION_DIM_COUNT_ not supported
#endif

	if (all(lessThan(COORD, IMAGE_DIM)))
		imageStore(_NBL_GLSL_BLIT_NORMALIZATION_INOUT_IMAGE_DESCRIPTOR_DEFINED_, COORD, data);

#undef COORD
#undef IMAGE_DIM
}
#endif

